<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="Handlebars" injector-id="xml">
      <display-name>Handlebars</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("script"))]]></place>
      <xpath-condition>lower-case(@type)='text/x-handlebars-template'</xpath-condition>
    </injection>
  </component>
</application>